@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Create Category</h3>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Display Order </label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<button type="submit" class="btn btn-success" style="width:150px">Submit</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-warning" style="width:150px"> Back to List </a>
	</div>
</form>


@section Scripts
{
	@{
	<partial name="_ValidationScriptPartial" />
	}
}